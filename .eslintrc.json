{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      "semi": 2,
      "indent": ["error", 3],
      "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
      "quotes": [1, "double"]
    }
}
